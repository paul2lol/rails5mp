<p id="notice"><%= notice %></p>
<h2>Your Cart</h2>
<table>
	<% @cart.line_items.each do |item| %>
	<tr>
		<td><%= item.quantity %>&times;</td>
		<td><%= item.product.title %></td>
		<td class="item_price"><%= number_to_currency(item.product.price, :locale => :hi) %></td>
		<td class="item_price"><%= number_to_currency(item.total_price, :locale => :hi) %></td>
		<td><%= button_to 'Remove Item', item,:method => :delete %></td>
	</tr>
	<% end %>
	<tr class="total_line">
		<td colspan="3">Total</td>
		<td class="total_cell"><%= number_to_currency(@cart.total_price, :locale => :hi) %></td>
	</tr>
</table>
<%= button_to 'Empty cart', @cart, method: :delete,
data: { confirm: 'Are you sure?' } %>